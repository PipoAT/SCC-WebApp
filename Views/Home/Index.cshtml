@{
    ViewData["Title"] = "Home Page";
}

<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>UPDATE (3/8/2023):</strong> Started Implementation of Bootstrap 5 Framework. Improved Sending and Receiving JS Functionality. Design Changes.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="row">
    <br>
    <p class ="h1 text-primary">Serial COM Communications Web Application</p>
    <p class ="h2 text-secondary">Developed by Andrew Pipo</p>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <br>
    <p class="h3 p-3 text-dark-emphasis bg-dark-subtle border border-dark-subtle rounded-3">Neccesary Settings</p>
    <br>
    <br>
    <div class="col-sm-6">
        <p class="h6">Select BAUD</p>
        <select class="form-select-sm" aria-label="Dropdown for BAUDRATE Setting" name="BAUD" id="BAUD">
            <option value="none" selected disabled hidden>Select BAUDRATE</option>
            <option value="75">75</option>
            <option value="110">110</option>
            <option value="134">134</option>
            <option value="150">150</option>
            <option value="300">300</option>
            <option value="600">600</option>
            <option value="1200">1200</option>
            <option value="1800">1800</option>
            <option value="2400">2400</option>
            <option value="4800">4800</option>
            <option value="7200">7200</option>
            <option value="9600">9600</option>
            <option value="14400">14400</option>
            <option value="19200">19200</option>
            <option value="38400">38400</option>
            <option value="57600">57600</option>
            <option value="115200">115200</option>
            <option value="128000">128000</option>
        </select>
        <br>
        <br>
        <p class="h6">Select Parity</p>
        <select class="form-select-sm" aria-label="Dropdown for Parity Setting" name="Parity" id="Parity">
            <option value="" selected disabled hidden>Select Parity Option</option>
            <option value="none">None</option>
            <option value="even">Even</option>
            <option value="odd">Odd</option>
            <option value="mark">Mark</option>
            <option value="space">Space</option>
        </select>
        <br>
        <br>
        <p class="h6">Select DataBits</p>
        <select class="form-select-sm" aria-label="Dropdown for DataBits Setting" name="DataBits" id="DataBits">
            <option value="none" selected disabled hidden>Select DataBits Option</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
        </select>
        <br>
        <br>
        <p class="h6">Select StopBits</p>
        <select class="form-select-sm" aria-label="Dropdown for StopBits Setting" name="StopBits" id="StopBits">
            <option value="none" selected disabled hidden>Select StopBits Option</option>
            <option value="1">1</option>
            <option value="1.5">1.5</option>
            <option value="2">2</option>
        </select>
        <br>
        <br>
    </div>
    <br>
    <div class="col-sm-6">
        <p class = "h6">Select Read Timeout</p>
        <select class="form-select-sm" aria-label="Dropdown for ReadTimeout Setting" name="ReadTimeout" id="ReadTimeout">
            <option value="none" selected disabled hidden>Select Read Timeout Option</option>
            <option value="-1">-1</option>
            <option value="500">500</option>
        </select>
        <br>
        <br>
        <p class="h6">Select Write Timeout</p>
        <select class="form-select-sm" aria-label="Dropdown for WriteTimeout Setting" name="WriteTimeout" id="WriteTimeout">
            <option value="none" selected disabled hidden>Select Write Timeout Option</option>
            <option value="-1">-1</option>
            <option value="500">500</option>
        </select>
        <br>
        <br>
        <p class="h6">Select Handshake</p>
        <select class="form-select-sm" aria-label="Dropdown for Handshake Setting" name="Handshake" id="Handshake">
            <option value="" selected disabled hidden>Select Handshake Option</option>
            <option value="none">None</option>
            <option value="software">Software (XON/XOFF)</option>
            <option value="hardware">Hardware (RTS/CTS)</option>
            <option value="xon">XOnXOff</option>
        </select>
        <br>
        <br>
        <p class="h6">Select Delay (ms)</p>
        <select class="form-select-sm" aria-label="Dropdown for Delay Setting" name="Delay" id="Delay">
            <option value="none" selected disabled hidden>Select Delay (ms) Option</option>
            <option value="100">100</option>
            <option value="500">500</option>
            <option value="1000">1000</option>
            <option value="5000">5000</option>
        </select>
        <br>
        <br>
    </div>
    <br>
    <p class ="h3 p-3 text-dark-emphasis bg-dark-subtle border border-dark-subtle rounded-3">Optional Settings</p>
    <br>
    <br>
    <div class="col-sm-4">
    <br>
    <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="repeat">
    <label class="form-check-label" for="flexSwitchCheckDefault">Repeat Transmission?</label>
    </div>
    <br>
    </div>
    <div class="col-sm-4">
    <br>
    <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="log">
    <label class="form-check-label" for="flexSwitchCheckDefault">Log Transmission?</label>
    </div>
    <br>
    </div>
    <div class="col-sm-4">
    <br>
    <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="overwrite">
    <label class="form-check-label" for="flexSwitchCheckDefault">Overwrite RX?</label>
    </div>
    <br>
    </div>
    <br>
    <br>
    <p class ="h3 p-3 text-dark-emphasis bg-dark-subtle border border-dark-subtle rounded-3">Send/Receive</p>
    <br>
    <br>
    <div class="col-sm-6">
        <br>
        <p class="h3">Send Data</p>
        <br>
        <button class="btn btn-primary" onclick="sendData()">Send Data</button>
        <br>
    </div>
    <div class="col-sm-6">
        <br>
        <p class="h3">Receive Data</p>
        <br>
        <button class="btn btn-primary" onclick="receiveData()">Receive Data</button>
        <br>
        <p id="received-data"></p>
        <br>
        <br>
    </div>
</div>
